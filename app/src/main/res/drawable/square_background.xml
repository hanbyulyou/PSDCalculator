<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer square shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Background color for the outer square -->
            <corners android:radius="10dp" /> <!-- Larger radius for the outer square -->
        </shape>
    </item>
    <!-- Inner square shape (your existing square) -->
    <item android:right="8dp" android:left="8dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#E9E9E9" /> <!-- Background color for the inner square -->
            <corners android:radius="8dp" /> <!-- Radius for the inner square -->
        </shape>
    </item>
</layer-list>